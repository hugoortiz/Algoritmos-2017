#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

float POTEN(float x,int y);
int FAC(int n);
float serie(int X,int N);
void main()
{
	short opc;
	int n,fac,exponente,a,b;
	float base,pot,suma;
	do{
		cout << " 1.- --- Potencia " << endl;
		cout << " 2.- --- Factorial " << endl;
		cout << " 3.- --- Suma de serie " << endl;
		cout << " 0.- --- Salir" << endl;
		cout << "Ingrese la opcion" << endl;
		cin >> opc;
		switch(opc){
		case 1:{
			cout << "Ingrese una base : " ;
			cin >> base ;
			cout << "\n Ingrese un exponente : " ;
			cin >> exponente ;
			pot = POTEN(base,exponente);
			cout << "La potencia es " << pot << endl; ;
			break;}
		case 2:{
			cout << " Ingrese un numero entero:  " << endl;
			cin >> n;
			fac = FAC(n);
			cout << "El factorial de " << n << " es " << fac << endl;
			break;}
		case 3:{
			cout << "Ingrese X " << endl;
			cin >> a;
			cout << "Ingrese N " << endl;
			cin >> b;
			suma = serie(a,b);
			cout << " la suma de la serie es " << suma << endl;
			break;}
		case 0:
			cout << "Salir \n " ;
			break;	
		}

	}while(opc!=0);

	getch();
}

float POTEN(float x,int y){
float p=1;
	for(int i=1;i<=y;i++){
		p = p * x;
	}
	return p;
}

int FAC(int n){
int i,p=1;
	for(i=2;i<=n;i++){
		p = p * i;
	}
return p;
}

float serie(int X,int N){
	int i;
	float s=0;
	for(i=1;i<=N;i++){
	s = s + POTEN(X,N)/FAC(N);
	}
	return s;
}
